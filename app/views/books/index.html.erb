
<h3>Books</h3>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    </tr>
  </tread>

  <% if notice %>
  <p><%= notice %></p>
<% end %>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>New Book</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <%= label_tag "display_text_title","Title", style: "font-size: smaller;" %><br>
  <%= f.text_field :title %>
  
  <br>
  
  <%= label_tag "display_text_body","Body", style: "font-size: smaller;" %><br>
  <%= f.text_area :body %>

  <br>
  
  <%= f.submit 'Create Book' %>
<% end %>