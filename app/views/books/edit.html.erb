<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>

  
<% end %>


<div style="display: flex;">
  <%= link_to "Edit", edit_book_path(@book.id), style: "margin: 0px 0px 10px 10px ;" %>
  <span>' | '</span>
  <%= link_to "Back", new_book_path(@book.id) %>
</div>