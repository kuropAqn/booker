<h3>Books</h3>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    </tr>
  </tread>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "show", book_path(book.id) %>
        <%= link_to "edit", edit_book_path(book.id) %>
        <%= link_to "destroy", book, method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h3>New Book<h3>
<%= form_with model: @books, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Creats Book' %>

<% end %>